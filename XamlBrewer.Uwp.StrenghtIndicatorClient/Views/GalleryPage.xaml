    <Grid Background="{StaticResource PageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              Margin="20">
            <controls:StrengthIndicator Value="{Binding Path=Value, ElementName=Slider, Mode=TwoWay}"
                                        Stroke="{Binding Path=Value, ElementName=Slider, Converter={StaticResource IntToBrushConverter}}"
                                        Fill="{Binding Path=Value, ElementName=Slider, Converter={StaticResource IntToBrushConverter}}" />

        </Grid>

        <!-- Right -->
        <Grid ManipulationMode="TranslateX"
              ManipulationCompleted="StrengthIndicator_ManipulationCompleted"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Margin="20"
              Grid.Column="1"
              Background="Transparent">
            <controls:StrengthIndicator x:Name="InteractiveIndicator"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426" />
        </Grid>

        <!-- Sliders -->
        <Slider x:Name="Slider"
                Maximum="5"
                Margin="20"
                Grid.Row="1"
                Grid.Column="0" />
        <TextBlock Text="(To change the value, swipe left or right on the dice.)"
                   Foreground="{StaticResource PageForegroundBrush}"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   Margin="20"
                   Grid.Row="1"
                   Grid.Column="1" />

        <!-- Thumbnails -->
        <Grid HorizontalAlignment="Center"
              Grid.Row="2"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:StrengthIndicator Value="0"
                                        Fill="#8882A8"
                                        Stroke="#8882A8"
                                        Margin="8"
                                        Grid.Column="0" />
            <controls:StrengthIndicator Value="1"
                                        Margin="8"
                                        Fill="SeaGreen"
                                        Stroke="SeaGreen"
                                        Grid.Column="1" />
            <controls:StrengthIndicator Value="2"
                                        Margin="8"
                                        Fill="LightGreen"
                                        Stroke="LightGreen"
                                        Grid.Column="2" />
            <controls:StrengthIndicator Value="3"
                                        Margin="8"
                                        Fill="Khaki"
                                        Stroke="Khaki"
                                        Grid.Column="3" />
            <controls:StrengthIndicator Value="4"
                                        Margin="8"
                                        Fill="Orange"
                                        Stroke="Orange"
                                        Grid.Column="4" />
            <controls:StrengthIndicator Value="5"
                                        Margin="8"
                                        Fill="Firebrick"
                                        Stroke="Firebrick"
                                        Grid.Column="5" />
        </Grid>
        <Grid HorizontalAlignment="Center"
              Grid.Row="2"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:StrengthIndicator Value="0"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="0" />
            <controls:StrengthIndicator Value="1"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="1" />
            <controls:StrengthIndicator Value="2"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="2" />
            <controls:StrengthIndicator Value="3"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="3" />
            <controls:StrengthIndicator Value="4"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="4" />
            <controls:StrengthIndicator Value="5"
                                        Paths="{StaticResource DicePaths}"
                                        Fill="#8882A8"
                                        Stroke="#141426"
                                        Margin="8"
                                        Grid.Column="5" />
        </Grid>

        <!-- Descriptions -->
        <TextBlock Text="Color Change"
                   Foreground="{StaticResource PageForegroundBrush}"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   FontSize="18"
                   Margin="12"
                   Grid.Column="0"
                   Grid.Row="3" />
        <TextBlock Text="Interactive"
                   Foreground="{StaticResource PageForegroundBrush}"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   FontSize="18"
                   Margin="12"
                   Grid.Column="1"
                   Grid.Row="3" />
    </Grid>
</Page>
